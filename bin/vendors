#!/usr/bin/env ruby
$LOAD_PATH.push File.expand_path('../lib', __dir__)
require 'macs'

# ------------------------------------
# Generate popular prefixes for Deamon
# ------------------------------------

result = []
result.push "// Copyright (c) halo"
result.push "// SPDX-License-Identifier: MIT"
result.push ""
result.push "// This file was auto-generated #{Date.today} using `bin/vendors`."
result.push "// If this file changes, don't forget to restart the daemon for the changes to take effect."
result.push ''
result.push 'struct PopularVendors {'
result.push '  static var dictionary: [String: [String:[UInt32]]] {'
result.push '    return ['
result.push Macs::Vendors.all.map(&:to_swift)
result.push '    ]'
result.push '  }'
result.push '}'

path = Pathname.new('LinkTools/Backends/PopularVendors.swift')
puts "Writing to #{path}"

path.write result.join("\n")
